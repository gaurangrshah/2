---
import { Icon } from "astro-icon";

const { title, description, icon } = Astro.props as ServiceCardProps;
---

<div class='md:w-80 w-full px-6 md:px-0 secondary'>
  <div
    class='w-full flex flex-row p-4 border md:border-b border-primary-content/30'
  >
    <div>
      <Icon name={icon} />
    </div>
    <div>
      <h4 class='unset card-title'>{title}</h4>
      <p class='text-left'>
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  [astro-icon] {
    width: 2rem;
    height: 2rem;
    margin-right: 1rem;
  }
