---
import { Icon } from "astro-icon";

const { title, description, link, linkText } = Astro.props;
---

<div
  class='flex-1 px-6 py-3 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700'
>
  <div class='flex gap-x-4'>
    <slot name='icon'>
      <Icon name='ph:circles-four' />
    </slot>
    <h5
      slot='title'
      class='mb-2 text-2xl font-semibold tracking-tight text-primary-content truncate'
    >
      {title || "Your Skills"}
    </h5>
    <a href={link}>
      <slot name='title' />
    </a>
  </div>
  <p class='mb-3 font-normal text-secondary-content line-clamp-3'>
    {description}
  </p>
  <a
    href={link}
    class='inline-flex items-center text-sm text-info hover:underline'
  >
    {linkText}
    <svg
      class='w-3 h-3 ms-2.5 rtl:rotate-[270deg]'
      aria-hidden='true'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 18 18'
    >
      <path
        stroke='currentColor'
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778'
      ></path>
    </svg>
  </a>
</div>

<style>
  [astro-icon] {
    width: 2rem;
    height: 2rem;
    color: var(--primary);
  }
</style>
