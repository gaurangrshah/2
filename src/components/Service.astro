---
import ServiceCard from "./ServiceCard.astro";
interface ServiceProps {
  intro: string;
  section: string;
  selected?: boolean;
  services: ServiceCardProps[];
}
const { intro, section, selected, services } = Astro.props;
---

<div
  data-section={section}
  class:list={["peer mx-auto py-6", selected ? "" : "hidden"]}
>
  <div class='flex w-full'>
    <div class='w-1/2 p-4'>
      <p class='text-primary-content/60 text-left pl-6'>
        {intro}
      </p>
    </div>
    <div class='w-1/2 flex flex-col items-center justify-center mx-auto'>
      {
        services &&
          services.length &&
          services.map((service: ServiceCardProps) => (
            <ServiceCard {...service} />
          ))
      }
    </div>
  </div>
</div>
