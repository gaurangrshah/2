---
import { Icon } from "astro-icon";
interface WorkRecord {
  company: string;
  position: string;
  date: string;
  description: string;
}

const workHistory: WorkRecord[] = [
  {
    company: "Hashnode",
    position: "Software Engineer",
    date: "2022 - 2023",
    description: "Working on the Hashnode platform",
  },
  {
    company: "G.Shah Development",
    position: "Senior Consultant",
    date: "2020 - Present",
    description: "Working on various projects for clients",
  },
  {
    company: "G.Shah Development",
    position: "Senior Consultant",
    date: "2020 - Present",
    description: "Working on various projects for clients",
  },
];
---

<!-- https://flowbite.com/docs/components/timeline/ -->
<div class='w-full max-w-3xl mx-auto mt-12'>
  <ol class='items-center sm:flex'>
    {
      workHistory.map((job) => (
        <li class='relative mb-6 sm:mb-0'>
          <div class='flex items-center'>
            <div class='flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full ring-0 ring-white dark:bg-blue-900 sm:ring-8 dark:ring-gray-900 shrink-0'>
              <Icon name='ph:calendar-blank-thin' />
            </div>
            <div class='hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700 md:px-1' />
          </div>
          <div class='mt-3 sm:pe-8'>
            <time class='block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500'>
              {job.date}
            </time>
            <h3 class='text-lg font-semibold text-gray-900 dark:text-white'>
              {job.company}
            </h3>
            <small class='text-sm'>{job.position}</small>
            <p class='text-base font-normal text-gray-500 dark:text-gray-400'>
              {job.description}
            </p>
          </div>
        </li>
      ))
    }
  </ol>
</div>

<style>
  [astro-icon] {
    width: 1.1rem;
  }
</style>
