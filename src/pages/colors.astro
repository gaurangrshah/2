const main = ["primary", "secondary", "accent", "neutral"];

const base = ["base-100", "base-200", "base-300"];
---

<Layout>
  <main class='relative w-full h-full mt-24'>
    <section class='h-4/5 my-auto mx-auto w-full max-w-4xl border'>
      <h1>Colors</h1>

      {
        main.map((c) => {
          const firstLetter = Array.from(c)[0];
          const focus = `bg-[${`oklch(var(--${firstLetter}f))`}]`;
          const content = `text-${c}-content`;
          console.log("ðŸš€ | file: colors.astro:19 | focus:", focus);
