---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import DevIcons from "../components/DevIcons.astro";
import Info from "../components/Info.astro";
import Footer from "../components/Footer.astro";
import ForHire from "../components/ForHire.astro";
import Contact from "../components/Contact.astro";
import Toast from "../components/Toast.astro";

let search = Astro.url.searchParams.get("info");
---

<Layout
  metadata={{
    title:
      "Gaurang Shah - Freelance Developer | Technology Consultant | Full-Stack Engineer",
  }}
>
  <Toast content='this is a test' />
  <main>
    <Hero />
    <div class='relative flex items-center min-h-[30vh] my-36'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        fill='none'
        viewBox='0 0 464 135'
        class='absolute fill-accent/10'
      >
        <path
          d='M0 0s122.122 37.241 232 37.241S464 0 464 0v67.5H0V0Zm464 135S341.878 97.759 232 97.759 0 135 0 135V67.5h464V135Z'
        >
        </path>
      </svg>
      <DevIcons />
    </div>
    <Info />
    <ForHire />
    <Contact />
  </main>

  <Footer />
</Layout>

<style>
  main {
    position: relative;
    margin: auto;
    padding: 0rem 0rem;
    width: 100dvw;
    max-height: 80dvh;
    font-size: 20px;
    line-height: 1.6;
    padding-bottom: 5rem;
    overflow-x: hidden;
  }
</style>

