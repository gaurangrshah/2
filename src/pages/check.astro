---
import Layout from "../layouts/Layout.astro";

const heroStyles = `
  background-color: #0A192F;
  background-image: linear-gradient(90deg, transparent 79px, #FFF 79px, #FFF 81px, transparent 81px),
                    linear-gradient(#0A192F 0.1em, transparent 0.1em);
  background-size: 100% 100%, 100% 1.2em;
`;
---

<Layout title='check'>
  <div class='hero'>
    <!-- hero content goes here -->
     Test
  </div>
</Layout>

<style>
  .hero {
    width: 100dvw;
    height: 100dvh;
    overflow: hidden;
  }

  .hero:before {
    content: "";
    --bg-color: 255, 255, 255, 0.1;
    background-size: 15px 15px;
    background-image: linear-gradient(
        to right,
        rgba(var(--bg-color)) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(var(--bg-color)) 1px, transparent 1px);
  }
</style>
